@using OJS.Web.Areas.Contests.ViewModels.Contests
@using Resource = Resources.Areas.Contests.Views.ListByType

@model IEnumerable<ContestSimpleViewModel>

@{
    ViewBag.Title = string.Format(Resource.Contests_with_allowed, ViewBag.SubmissionType);
}

<h2>
    @ViewBag.Title
</h2>

@(Html.Kendo()
        .Grid<ContestSimpleViewModel>()
        .Name("Contests")
        .BindTo(Model)
        .Columns(col =>
        {
            col.Bound(x => x.Name).ClientTemplate("<a href='/Contests/#:Id#/#:NameForUrl#'>#:Name#</a>");
        }).DataSource(data =>
        {
            data.Ajax().ServerOperation(false).PageSize(10);
        })
        .Pageable(page => page.Enabled(true))
)