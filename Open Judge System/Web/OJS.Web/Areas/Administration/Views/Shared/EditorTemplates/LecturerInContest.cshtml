@model OJS.Web.Areas.Administration.ViewModels.LecturersInContests.LecturerInContestShortViewModel

@using Resource = Resources.Views.Shared.EditorTemplates.LecturerInContest

<div class="editor-label">
    @Html.LabelFor(x => x.ContestName)
</div>

<div class="editor-field">
    @(Html.Kendo().ComboBoxFor(m => m.ContestId)
        .Name("ContestId")
        .DataValueField("Id")
        .DataTextField("Name")
        .Filter(FilterType.Contains)
        .MinLength(3)
        .Placeholder(Resource.Select_training)
        .DataSource(data => data
            .ServerFiltering(true)
            .Read(read =>
            {
                read
                    .Action("GetAvailableContestsContaining", "LecturersKendoRemoteData", new {area = "Administration"})
                    .Data(@<text>
                            function () { return { contestFilter: $('\\#ContestId').data('kendoComboBox').input.val() }; }
                        </text>);
            }))
        .HtmlAttributes(new { style = "width: 100%;" })
    )

    @Html.ValidationMessageFor(x => x.ContestId)
</div>