@model OJS.Web.Areas.Administration.ViewModels.ContestCategory.EditAllContestsAdministrationViewModel

@using Resource = Resources.Areas.Administration.ContestCategories.Views.ContestCategoriesViews

@{
    ViewBag.Title = $"{Resource.Edit_all_contests_page_title} {Model.CategoryName}";
}

<h1>@ViewBag.Title</h1>
<hr/>

<div id="import-form" class="container">
    @using (Html.BeginForm("EditAllContests", "ContestCategories", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.CategoryId)
        @Html.HiddenFor(model => model.CategoryName)


        <hr />
        <div class="row">
            <div class="editor-label col-xs-3">
                <button type="submit" class="btn btn-primary pull-right" id="edit-all-contests-button">Edit</button>
            </div>
            <div class="editor-label col-xs-4">
                <a href="@ViewBag.ReturnUrl" class="btn btn-primary">Back</a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script type="text/javascript">
        document.getElementById("edit-all-contests-button").addEventListener("click", function(event) {
            const confirmation = confirm("Are you sure you want to edit all the contests in the category?");
            if (!confirmation) {
                // Prevent form submission if the user cancels
                event.preventDefault();
            }
        });
    </script>
}